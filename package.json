{
  "name": "storybook-addon-manual-mocks",
  "version": "0.0.6",
  "description": "Mock your imports in the same way as Jest Manual Mocks do",
  "repository": {
    "type": "git",
    "url": "https://github.com/gebeto/storybook-addon-manual-mocks"
  },
  "author": "gebeto",
  "keywords": [
    "manual-mocks",
    "manual-mock",
    "mocks",
    "mock",
    "test",
    "storybook-addons"
  ],
  "storybook": {
    "displayName": "Manual Mocks",
    "supportedFrameworks": [
      "react",
      "vue",
      "angular",
      "web-components",
      "ember",
      "svelte",
      "preact",
      "aurelia",
      "marionette"
    ],
    "icon": "https://user-images.githubusercontent.com/321738/63501763-88dbf600-c4cc-11e9-96cd-94adadc2fd72.png"
  },
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/ts/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "*.js",
    "*.d.ts"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "buildBabel": "concurrently \"yarn buildBabel:cjs\" \"yarn buildBabel:esm\"",
    "buildBabel:cjs": "babel ./src -d ./dist/cjs --extensions \".js,.jsx,.ts,.tsx\"",
    "buildBabel:esm": "babel ./src -d ./dist/esm --env-name esm --extensions \".js,.jsx,.ts,.tsx\"",
    "buildTsc": "tsc --declaration --emitDeclarationOnly --outDir ./dist/ts",
    "prebuild": "yarn clean",
    "build": "concurrently \"yarn buildBabel\" \"yarn buildTsc\"",
    "build:watch": "concurrently \"yarn buildBabel:esm -- --watch\" \"yarn buildTsc -- --watch\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook:webpack": "start-storybook -p 6006 --config-dir .storybook-webpack",
    "storybook:vite": "start-storybook -p 6006 --config-dir .storybook-vite",
    "start": "concurrently \"yarn build:watch\" \"yarn storybook -- --no-manager-cache --quiet\"",
    "build-storybook:webpack": "build-storybook --config-dir .storybook-webpack",
    "build-storybook:vite": "build-storybook --config-dir .storybook-vite",
    "prerelease": "zx scripts/prepublish-checks.mjs",
    "release": "yarn build && auto shipit",
    "eject-ts": "zx scripts/eject-typescript.mjs"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@babel/preset-typescript": "^7.13.0",
    "@storybook/addon-essentials": "^6.5.8",
    "@storybook/builder-vite": "^0.4.2",
    "@storybook/react": "^6.5.8",
    "@vitejs/plugin-react": "^3.1.0",
    "auto": "^10.3.0",
    "babel-loader": "^8.1.0",
    "boxen": "^5.0.1",
    "concurrently": "^6.2.0",
    "dedent": "^0.7.0",
    "prettier": "^2.3.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4",
    "vite": "^4.2.1",
    "zx": "^1.14.1"
  },
  "peerDependencies": {
    "@storybook/addons": "^6",
    "@storybook/api": "^6",
    "@storybook/components": "^6",
    "@storybook/core-events": "^6",
    "@storybook/theming": "^6"
  },
  "publishConfig": {
    "access": "public"
  }
}
